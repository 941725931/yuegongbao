.quanbu {
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: #F8F8F8;
}
.quanbu .lll {
  background-color: #fff;
  margin-top: 120rpx;
}
.quanbu .headerBar {
  position: fixed;
  z-index: 9999;
  top: 0;
  left: 0;
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  height: 98rpx;
  background-color: #fff;
  box-sizing: border-box;
  padding: 0 41rpx;
}
.quanbu .headerBar text {
  line-height: 98rpx;
  text-align: center;
  color: #666;
  font-size: 28rpx;
}
.quanbu .headerBar .show {
  border-bottom: 4rpx solid #E83235;
  font-size: 34rpx;
  font-weight: 700;
  color: #222;
}

