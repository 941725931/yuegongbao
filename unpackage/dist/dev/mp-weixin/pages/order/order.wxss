.order {
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: #F8F8F8;
}
.order .lll {
  background-color: #fff;
  margin-top: 120rpx;
}
.order .headerBar {
  position: fixed;
  z-index: 9999;
  top: 0;
  left: 0;
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  height: 98rpx;
  background-color: #fff;
  box-sizing: border-box;
  padding: 0 41rpx;
}
.order .headerBar text {
  line-height: 98rpx;
  text-align: center;
  color: #666;
  font-size: 28rpx;
}
.order .headerBar .show {
  border-bottom: 4rpx solid #E83235;
  font-size: 34rpx;
  font-weight: 700;
  color: #222;
}
.order .amount {
  position: fixed;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  bottom: 0;
  left: 0;
  right: 0;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  height: 118rpx;
  background-color: #fff;
}
.order .amount .xiadan {
  width: 233rpx;
  line-height: 118rpx;
  text-align: center;
  background-color: #E83235;
  color: #fff;
  font-size: 36rpx;
  letter-spacing: 2rpx;
}
.order .amount .jine {
  font-size: 28rpx;
  color: #222;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  text-indent: 27rpx;
  line-height: 118rpx;
}
.order .amount .jine .myred {
  color: #E83235;
}
.order .warning {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  width: 300rpx;
  height: 200rpx;
  background-color: rgba(0, 0, 0, 0.8);
  border-radius: 10rpx;
  color: #fff;
}
.order .warning text {
  display: block;
  text-align: center;
  margin-top: 30rpx;
  font-weight: 100;
  letter-spacing: 2rpx;
}
.order .warning .iconfont {
  font-size: 60rpx;
}
.none {
  display: none;
}
.block {
  display: block;
}

