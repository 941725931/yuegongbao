<view class="xuanzefuwu"><view class="header"><text class="project">{{service_name}}</text><block wx:for="{{list}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="main"><image src="{{item.picture}}" mode></image><view class="describe"><text class="jianjie">{{item.service_desc}}</text><view class="bottom"><text class="xiaokong">{{item.name}}</text><view class="jiaOrJian"><text data-event-opts="{{[['tap',[['reduce',[index,0,'$0'],[[['list','',index]]]]]]]}}" class="jian" bindtap="__e">-</text><text>{{chooseNumber[index]}}</text><text data-event-opts="{{[['tap',[['increase',[index,0,'$0'],[[['list','',index]]]]]]]}}" class="jia" bindtap="__e">+</text></view></view></view></view></block><block wx:if="{{isMore}}"><view class="gengduo"><view data-event-opts="{{[['tap',[['changeHide',[1]]]]]}}" class="show" bindtap="__e"><block wx:if="{{ishide==true}}"><view class="ad-column"><text class="project">更多项目</text><text class="project right myblue">(展开更多↓↓↓)</text></view></block><block wx:if="{{ishide==true}}"><text class="project hideText myblue">展开[+]</text></block></view><block wx:if="{{ishide==false}}"><view data-event-opts="{{[['tap',[['changeHide',[2]]]]]}}" class="hide" bindtap="__e"><text class="project">更多项目</text><text class="project hideText">隐藏[-]</text></view></block><block wx:for="{{moreList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><block wx:if="{{moreHide}}"><view class="main"><image src="{{item.picture}}" mode></image><view class="describe"><text class="jianjie">{{item.service_desc}}</text><view class="bottom"><text class="xiaokong">{{item.name}}</text><view class="jiaOrJian"><text data-event-opts="{{[['tap',[['reduce',[index,1,'$0'],[[['moreList','',index]]]]]]]}}" class="jian" bindtap="__e">-</text><text>{{moreNumber[index]}}</text><text data-event-opts="{{[['tap',[['increase',[index,1,'$0'],[[['moreList','',index]]]]]]]}}" class="jia" bindtap="__e">+</text></view></view></view></view></block></block></view></block></view><view class="detail"><text class="feiyong">费用明细：</text><block wx:if="{{!NotChoose}}"><text class="feiyong myred">{{"("+price+"元起，选定项目后计算)"}}</text></block><block wx:if="{{NotChoose}}"><view class="show"><text>已选服务</text><text>数量</text><text>费用小计</text></view></block><block wx:for="{{HasChosen}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="mulu"><view class="selected"><view>{{item.name}}</view><view><text>{{item.number}}</text>个</view><view class="red">￥<text>{{item.price}}</text></view></view></view></block><block wx:if="{{NotChoose}}"><view class="combined">合计：<text>{{total}}</text></view></block></view><view class="instructions"><view class="xiadan"><image src="../../../static/home/xiadanshuoming.png" mode></image><block wx:for="{{instruction}}" wx:for-item="item" wx:for-index="index" wx:key="index"><text>{{index+1+"."+item}}</text></block></view><view data-event-opts="{{[['tap',[['call',['$0'],['telephone']]]]]}}" class="contact" bindtap="__e"><text>不会选？</text><view class="inquiry"><view class="phone"><view class="iconfont"></view></view><text>{{"联系客服询价:"+telephone}}</text></view></view></view><view class="terms"><view data-event-opts="{{[['tap',[['changeisxy',['$event']]]]]}}" class="{{[(!isxy)?'no':'',(isxy)?'yes':'']}}" bindtap="__e"><view class="iconfont"></view></view><text data-event-opts="{{[['tap',[['goServiceAgreement',['../serviceAgreement/serviceAgreement','$0'],['service_name']]]]]}}" bindtap="__e">我已阅读并同意服务协议</text></view></view>